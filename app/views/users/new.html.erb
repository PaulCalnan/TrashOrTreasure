<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <ol>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ol>
<% end %>

<%= form_for @user do |f| %>
  <div>
    <%= f.label :name %><br>
    <%= f.email_field :name %>
  </div><br>
  <div>
    <%= f.label :email %><br>
    <%= f.email_field :email %>
  </div><br>
  <div>
    <%= f.label :password %><br>
    <%= f.password_field :password %>
  </div><br>
  <div>
    <%= f.label :password_confirmation %><br>
    <%= f.password_field :password_confirmation %>
  </div><br>
  <div>
    <%= f.submit "Sign Up"%>
  </div>
<% end %>
